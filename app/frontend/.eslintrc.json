{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "@trybe/eslint-config-frontend",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-curly-spacing": [2, { "when": "never" }],
    "comma-dangle": "off",
    "array-callback-return": "off"
  }
}
